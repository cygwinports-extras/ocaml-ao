inherit ocaml

NAME="ocaml-ao"
VERSION=0.2.0
RELEASE=3
CATEGORY="Libs"
SUMMARY="OCaml libao bindings"
DESCRIPTION="This package contains an O'Caml interface for the cross-platform
audio output library, otherwise known as libao."
HOMEPAGE="http://savonet.sourceforge.net/"
SRC_URI="mirror://sourceforge/savonet/${NAME}-${VERSION}.tar.gz"

src_compile() {
	lndirs
	cd ${B}
	cygconf
	cygmake -j1
}

src_test() {
	cd ${B}/examples
	cygmake -j1
	./ao_test || true
}
